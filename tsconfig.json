{
  "compilerOptions": {
    "outDir": "dist",
    "experimentalDecorators": true,
    "lib": ["es2015","dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "jsx": "preserve",
    "jsxFactory": "h",
    "skipLibCheck":true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "removeComments": true
  },
  "include":["src", "types"],
  "exclude":["node_modules"]
}